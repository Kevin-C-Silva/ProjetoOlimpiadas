@model ProjetoOlimpiadas.Models.Modalidades

@{
    ViewBag.Title = "Cadastro de Modalidade";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/criar.css"/>
</head>
<body>

    <div class="form-container">
        <h2>Cadastrar Modalidade</h2>
        <form asp-action="Criar" method="post">
            <label>Nome da modalidade:</label>
            <input asp-for="NomeModalidade" type="text" required/>            

            <button type="submit">Cadastrar</button>
        </form>
    </div>
</body>
</html>
