@model ProjetoOlimpiadas.Models.ResultadosAtletas

@{
    ViewBag.Title = "Cadastro de Resultado";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/criar.css" />
</head>
<body>
    <div class="form-container">
        <h2>Cadastrar Resultados</h2>
        <form asp-action="Criar" method="post">
            <select asp-for="CodAtleta" asp-items="@(new SelectList(ViewBag.Atletas, "CodAtleta", "NomeAtleta"))" required>
                <option value="">Selecione o atleta</option>
            </select>

            <select asp-for="CodProva" asp-items="@(new SelectList(ViewBag.Provas, "CodProva", "NomeProva"))" required>
                <option value="">Selecione a prova</option>
            </select>

            <select asp-for="CodEdicao" asp-items="@(new SelectList(ViewBag.Edicoes, "CodEdicao", "Ano"))" required>
                <option value="">Selecione a edição</option>
            </select>

            <label>Resultado:</label>
            <input asp-for="Resultado" type="text" required />

            <label>Medalha:</label>
            <input asp-for="Medalha" type="text" required />
            <button type="submit">Cadastrar</button>
        </form>
    </div>
</body>
</html>
