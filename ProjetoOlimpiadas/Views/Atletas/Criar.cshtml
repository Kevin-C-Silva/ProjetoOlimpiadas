@model ProjetoOlimpiadas.Models.Atletas

@{
    ViewBag.Title = "Cadastro de Atleta";
}



<!DOCTYPE html>

<html>
<head>

    <meta charset="utf-8"/>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/criar.css"/>
</head>
<body>

    <div class="form-container">
        <h2>Cadastrar Atleta</h2>
        <form asp-action="Criar" method="post">
            <label>Nome:</label>

            <input asp-for="NomeAtleta" type="text" required />
            <label>Data de Nascimento:</label>

            <input asp-for="DataNascimento" type="text" placeholder="DD/MM/AAAA" required />
            <label>Sexo:</label>

            <select asp-for="Sexo" required>
                <option value="">Selecione...</option>
                <option value="M">Masculino</option>
                <option value="F">Feminino</option>
            </select>

            <label>Altura (ex: 1.75):</label>
            <input asp-for="Altura" type="number" step="0.01" />

            <label>Peso (ex: 70.5):</label>
            <input asp-for="Peso" type="number" step="0.01" />
            <label>Cidade:</label>

            <select asp-for="CodCidade" asp-items="@(new SelectList(ViewBag.Cidades, "CodCidade", "NomeCidade"))" required>
                <option value="">Selecione a cidade</option>
            </select>

            <button type="submit">Cadastrar</button>
        </form>
    </div>
</body>
</html>
