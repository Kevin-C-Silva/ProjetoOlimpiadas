@model ProjetoOlimpiadas.Models.EstadosPaises

@{
    ViewBag.Title = "Cadastro de Estados/Países";
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/criar.css" />
</head>
<body>

    <div class="form-container">
        <h2>Cadastrar Estados/Países</h2>
        <form asp-action="Criar" method="post">
            <label>Nome do estado ou país:</label>
            <input asp-for="NomeEstado" type="text" required />
            <button type="submit">Cadastrar</button>
        </form>
    </div>
</body>
</html>
